# SecretLens Configuration
# Copy this file to .env and fill in your values

# LLM API Keys (choose one or more)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Configuration
LLM_MODEL=gpt-4o-mini
# Examples for different providers:
# LLM_MODEL=gpt-4o-mini           # OpenAI (cost-effective)
# LLM_MODEL=gpt-4o                # OpenAI (high performance)
# LLM_MODEL=claude-3-haiku-20240307    # Anthropic (cost-effective)
# LLM_MODEL=claude-3-sonnet-20240229   # Anthropic (balanced)
# LLM_MODEL=deepseek-r1           # Local Ollama model

# Custom Base URLs (optional, for proxies or compatible APIs)
LLM_BASE_URL=https://your-proxy.com/v1

# Provider-specific base URLs (optional, for advanced configurations)
# OPENAI_BASE_URL=https://your-openai-proxy.com/v1
# ANTHROPIC_BASE_URL=https://your-anthropic-proxy.com

# Gitleaks Configuration (optional)
# GITLEAKS_CONFIG_PATH=/path/to/custom/gitleaks.toml

# Default scan settings (optional)
# SECRETLENS_CONFIDENCE_THRESHOLD=0.7
# SECRETLENS_VERBOSE=true
